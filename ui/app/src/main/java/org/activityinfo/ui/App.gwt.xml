<module>


  <inherits name='com.google.gwt.user.User' />
  <inherits name='com.google.gwt.activity.Activity'/>
  <inherits name='com.google.gwt.place.Place'/>

  <inherits name='com.sencha.gxt.ui.GXT' />

  <inherits name='org.activityinfo.ui.ActivityInfoTheme' />

  <inherits name="org.activityinfo.model.Model"/>
  <inherits name="org.activityinfo.io.Match"/>
  <inherits name="org.activityinfo.store.query.Query"/>
  <inherits name="org.activityinfo.Analysis"/>
  <inherits name="org.activityinfo.api.ApiClient"/>

  <!-- Avoid unsupported RTL layout even when using RTL text -->
  <inherits name="org.activityinfo.i18n.ArabicLTR"/>

  <set-configuration-property name="CssResource.conversionMode" value="strict" />

  <inherits name="org.activityinfo.IndexedDB"/>
  <inherits name="org.activityinfo.Storage"/>

  <inherits name="org.activityinfo.ui.codemirror.CodeMirror"/>

  <inherits name="com.bedatadriven.rebar.appcache.AppCache"/>

  <set-property name="gwt.logging.logLevel" value="FINEST"/>
  <set-property name="gwt.logging.enabled" value="TRUE"/>

  <!-- GZip the output files by default -->
  <!--<inherits name='com.google.gwt.precompress.Precompress'/>-->

  <!-- Limit browser support -->
  <set-property name="gxt.user.agent" value="ie9, ie10, gecko1_9, safari5, chrome" />

  <set-configuration-property name="CssResource.style" value="pretty"/>

  <entry-point class="org.activityinfo.ui.client.AppEntryPoint"/>

  <!-- collapse properties for fewer permutations -->

  <!-- We need to collapse the GXT user agent property because
       we can't do the server-side selection required for appcache -->
  <collapse-property name="gxt.device" values="*" />
  <collapse-property name="user.agent.os" values="*"/>
  <collapse-property name="gxt.user.agent" values="*"/>

  <!-- Specify the paths for translatable code -->
  <source path='client'/>
  <source path='shared'/>

</module>
