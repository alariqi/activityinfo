<module>
    <inherits name="com.google.gwt.activity.Activity"/>
    <inherits name="com.sencha.gxt.ui.GXT"/>

    <!-- This is the base theme generated from theme.groovy -->
    <inherits name="org.activityinfo.ui.Theme"/>

    <replace-with class="org.activityinfo.ui.client.base.ThemeAppearance">
        <when-type-is class="com.sencha.gxt.core.client.resources.ThemeStyles.ThemeAppearance"/>
        <when-property-is name="gxt.theme" value="activityinfo"/>
    </replace-with>


    <replace-with class="org.activityinfo.theme.client.container.ViewportAppearance">
        <when-type-is class="com.sencha.gxt.widget.core.client.container.Viewport.ViewportAppearance"/>
        <when-property-is name="gxt.theme" value="activityinfo"/>
    </replace-with>

    <replace-with class="org.activityinfo.ui.client.base.tabs.TabPanelAppearance">
        <when-type-is class="com.sencha.gxt.widget.core.client.TabPanel.TabPanelAppearance"/>
        <when-property-is name="gxt.theme" value="activityinfo"/>
    </replace-with>

    <replace-with class="org.activityinfo.ui.client.base.button.ButtonAppearance">
        <when-type-is class="com.sencha.gxt.cell.core.client.ButtonCell.ButtonCellAppearance"/>
        <when-property-is name="gxt.theme" value="activityinfo"/>
    </replace-with>

    <replace-with class="org.activityinfo.ui.client.base.tablegrid.GridAppearance">
        <when-type-is class="com.sencha.gxt.widget.core.client.grid.GridView.GridAppearance"/>
        <when-property-is name="gxt.theme" value="activityinfo"/>
    </replace-with>

    <replace-with class="org.activityinfo.ui.client.base.tablegrid.ColumnHeaderAppearance">
        <when-type-is class="com.sencha.gxt.widget.core.client.grid.ColumnHeader.ColumnHeaderAppearance"/>
        <when-property-is name="gxt.theme" value="activityinfo"/>
    </replace-with>

    <replace-with class="org.activityinfo.ui.client.base.NullLayerAppearance">
        <when-type-is class="com.sencha.gxt.core.client.dom.Layer.LayerAppearance"/>
        <when-property-is name="gxt.theme" value="activityinfo"/>
    </replace-with>


</module>
